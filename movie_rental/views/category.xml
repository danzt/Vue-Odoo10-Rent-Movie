<odoo>
    <data>
        <record model="ir.ui.view" id="category_tree">
            <field name="name">mr.category</field>
            <field name="model">mr.category</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="category_form">
            <field name="name">mr.category</field>
            <field name="model">mr.category</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name" style="width:50% !important;"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>