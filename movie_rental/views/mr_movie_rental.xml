<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record model="ir.ui.view" id="mr_rental_tree">
            <field name="name">mr.rental</field>
            <field name="model">mr.rental</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="user_id"/>
                    <field name="movie_ids"/>
                    <field name="total_amount_rent"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="movie_form">
            <field name="name">mr.rental</field>
            <field name="model">mr.rental</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                             <field name="user_id"/>
                        </group>

                        <group>
                            <field name="movie_ids"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>